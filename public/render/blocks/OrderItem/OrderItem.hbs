<div class="restaurant-item {{classes}}" id={{id}}>
    <div class="order-item__name">
        <div class="restaurant-item__name">{{time}}</div>
        <div class="restaurant-item__name">{{status}}</div>
    </div>
    {{#if Button}}
        {{{Button}}}
    {{/if}}

    <h3>Информация о заказе</h3>
    <ul>
        <li>Дата: {{date}}</li>
        <li>Телефон: {{order.phone}}</li>
        <li>Комментарий: {{order.comment}}</li>
        <li>Количество людей: {{order.person_num}}</li>
        <li>Стоимость: {{order.price}} рублей</li>
    </ul>
    <h3>Заказ</h3>
    <ul>
        {{#each products}}
            <li>{{this.name}}</li>
        {{/each}}
    </ul>

</div>

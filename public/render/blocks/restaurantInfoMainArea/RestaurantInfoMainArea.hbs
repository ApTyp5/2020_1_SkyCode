<main class="restaurant-feedback__main-area">
    <div class="restaurant-feedback__belt">
        <div class="restaurant-feedback__scrolled-area">
            {{{RestaurantBanner}}}
            <div class="restaurant-feedback__info-bar">
                <h2 class="restaurant-feedback__label">Отзывы</h2>
                {{{BackHref}}}
            </div>
            {{#if user}}
                {{{FeedbackForm}}}
            {{else}}
                <div class="restaurant-feedback__login-signup-invitation">
                    Чтобы оставить отзыв,
                    {{{LoginHref}}} или {{{SignupHref}}}
                </div>
            {{/if}}
            <hr>
            {{#each Feedback}}
                {{{this}}}
            {{else}}
                Ваш отзыв будет первым.
            {{/each}}
        </div>
    </div>
</main>

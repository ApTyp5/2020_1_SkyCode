<input  class="{{classes}} input"
        type="{{type}}"

        {{#if isDisabled}}
            disabled
        {{/if}}

        {{#if placeholder}}
            placeholder="{{placeholder}}"
        {{/if}}

        {{#if src}}
            src="{{src}}"
            width="30"
            height="30"

        {{/if}}

        {{#if max}}
            max="{{max}}"
        {{/if}}

        {{#if min}}
            min="{{min}}"
        {{/if}}

        {{#if id}}
            id="{{id}}"
        {{/if}}

        {{#if value}}
            value="{{value}}"
        {{/if}}

        {{#if isRequired}}
            required
        {{/if}}

        {{#if pattern}}
            pattern="{{pattern}}"
        {{/if}}

        {{#if maxlength}}
            maxlength="{{maxlength}}"
        {{/if}}

        {{#if minlength}}
            minlength="{{minlength}}"
        {{/if}}
/>
